{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2017",
      "DOM"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
